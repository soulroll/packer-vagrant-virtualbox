{
  "description": "Builds a Ubuntu 16.04.2 Server x64 box",

  "variables": {
    "hostname": "xenial64",
    "cpus": "2",
    "vram": "36",
    "memory": "2048",
    "audio": "none",
    "usb": "off",
    "disk_size": "40960",
    "headless": "false",
    "username": "vagrant",
    "password": "vagrant"
  },

  "builders": [
    {
      "type": "virtualbox-iso",
      "name": "ubuntu64-virtualbox",
      "guest_os_type": "Ubuntu_64",
      "disk_size": "{{ user `disk_size` }}",
      "hard_drive_interface": "sata",

      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--vram", "{{ user `vram` }}" ],
        [ "modifyvm", "{{.Name}}", "--memory", "{{ user `memory` }}" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "{{ user `cpus` }}" ],
        [ "modifyvm", "{{.Name}}", "--audio", "{{ user `audio` }}"],
        [ "modifyvm", "{{.Name}}", "--usb", "{{ user `usb` }}"]
      ],

      "iso_url": "http://releases.ubuntu.com/16.04/ubuntu-16.04.2-server-amd64.iso",
      "iso_checksum": "2bce60d18248df9980612619ff0b34e6",
      "iso_checksum_type": "md5",

      "ssh_username": "{{user `username`}}",
      "ssh_password": "{{user `password`}}",
      "ssh_wait_timeout": "30m",
      "ssh_port": 22,

      "http_directory": "http",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",

      "boot_wait": "5s",
      "boot_command": [
        "<enter><wait>",
        "<f6><esc>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs>",
        "/install/vmlinuz ",
        "initrd=/install/initrd.gz ",
        "auto=true ",
        "priority=critical ",
        "net.ifnames=0 ",
        "url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg",
        "<wait><enter>"
      ],

      "shutdown_command": "echo 'packer' | sudo -S shutdown -P now"
    }
  ],

  "provisioners": [{
    "type": "shell",
    "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
    "scripts": [
      "scripts/apache.sh",
      "scripts/php.sh",
      "scripts/virtualbox.sh",
      "scripts/vagrant.sh"
    ]
  }],

  "post-processors": [
    {
      "type": "vagrant",
      "output": "./builds/vagrant.box"
    }
  ]

}
